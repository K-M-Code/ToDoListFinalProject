<Window x:Class="ToDoListFinalProject.TagInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TagInputDialog" Height="150" Width="250">
    <Grid>
        <Label Content="Enter Tag Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="txtTagName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0" Width="200" RenderTransformOrigin="0.498,0.507"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" Width="75" Click="OK_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,70,0,0" Width="75" Click="Cancel_Click"/>
    </Grid>
</Window>
